<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.doctordesh.activity.VideoCallInfoActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_cancel_black_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.doctordesh.customViews.RobotoMediumTextView
                android:id="@+id/tv_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="We use hipaa compliant platform of Zoom video conferencing app for video chat which is free of coast on your part. Below is the link to download/access Zoom app. After the app is downloaded/activated, please do following."
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_cancel" />

            <com.doctordesh.customViews.RobotoRegularTextView
                android:id="@+id/tv_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="1. Phone/Text Dr. Desh at his cell # 216-310-2924 to decide a mutually suitable time for video chat\n
2. At the decided time, please go into the Zoom app and Join the meeting using meeting id 352 346 2484.\n
3. For please join audio, select call using internet audio\n
4. Then hit on red camera icon at the bottom of the screen, to start the video\n
5. Please check bottom of the screen to make sure you are not on mute mode. Unmute self if you are mute.\n"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_header" />


            <com.doctordesh.customViews.RobotoMediumTextView
                android:id="@+id/tv_footer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sometimes, Dr. Desh may be driving or is in meeting and may take up to 3 hours to respond. Please wait for his call/text. If the matter cannot wait that long, please call/text ..... and follow the steps using meeting ID ....."
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_body" />


            <com.doctordesh.customViews.RobotoRegularTextView
                android:id="@+id/tv_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/txt_link_to_download_access_zoom_app"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_footer" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
