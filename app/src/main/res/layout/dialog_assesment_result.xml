<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/white_back_angular_box">


    <com.doctordesh.customViews.RobotoMediumTextView
            android:id="@+id/tv_congratulations"
            android:text="@string/text_congratulations"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="22sp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_congratulation"
            android:textColor="@color/colorBlack"
    />


    <com.doctordesh.customViews.RobotoMediumTextView
            android:id="@+id/tv_scored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_congratulations"
            android:textSize="28sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"
            android:text="8"
    />


    <View android:layout_width="0dp" android:layout_height="3dp"
          android:id="@+id/divider"
          app:layout_constraintLeft_toLeftOf="@+id/tv_scored"
          app:layout_constraintRight_toRightOf="@+id/tv_scored"
          app:layout_constraintTop_toBottomOf="@+id/tv_scored"
          android:background="@color/colorPrimary"
          android:layout_marginTop="10dp"
    />


    <com.doctordesh.customViews.RobotoMediumTextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:text="10"
    />


    <com.doctordesh.customViews.RobotoMediumTextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total"
            android:textSize="18sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey"
            android:text="Awesome!"
    />

    <com.doctordesh.customViews.RobotoMediumButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_gradient_4"
            android:textColor="@color/colorWhite"
            android:text="@string/text_okay"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_result"
            app:layout_constraintRight_toRightOf="parent"

    />


</androidx.constraintlayout.widget.ConstraintLayout>