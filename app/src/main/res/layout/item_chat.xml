<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingTop="5dp"
                                                   android:paddingRight="5dp"
                                                   android:paddingLeft="5dp"
>

    <com.doctordesh.customViews.RobotoRegularTextView
            android:id="@+id/tv_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Hello"
            android:visibility="gone"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/chat_msg_back"


    />


    <ImageView
            android:id="@+id/iv_user_image_message"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/chat_msg_back"/>


    <com.doctordesh.customViews.RobotoRegularTextView
            android:id="@+id/tv_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Hello"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:background="@drawable/chat_msg_app_color_back"


    />


    <ProgressBar
            android:id="@+id/pb_doc_file"
            android:layout_width="18dp" android:layout_height="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_my_message"
            app:layout_constraintBottom_toBottomOf="@+id/tv_my_message"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_marginRight="10dp"

    />


    <ImageView
            android:id="@+id/iv_my_image_message"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@drawable/app_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/chat_msg_back"


    />


</androidx.constraintlayout.widget.ConstraintLayout>