<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <View
        android:id="@+id/tv_assesment_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"

        app:layout_constraintRight_toLeftOf="@+id/arrow"
        android:background="@color/grey_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_assesment_desc"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@color/grey_1"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/arrow"
        app:layout_constraintTop_toBottomOf="@+id/tv_assesment_title" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_assesment_desc" />


    <View
        android:id="@+id/arrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey_1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_assesment_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_assesment_title" />


</androidx.constraintlayout.widget.ConstraintLayout>