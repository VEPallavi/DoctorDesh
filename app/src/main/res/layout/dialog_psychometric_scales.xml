<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_back_angular_box"
    android:layout_margin="25dp"
    android:paddingBottom="15dp"

    >



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/iv_cancel"
        android:padding="10dp"
        />

    <com.doctordesh.customViews.RobotoMediumTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Select psychometric scale"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_title"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_psychometric_scales"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        />








</androidx.constraintlayout.widget.ConstraintLayout>