<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_margin="25dp"
>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/colorWhite"
                  android:paddingTop="25dp"
                  android:paddingBottom="25dp"



    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_camera"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"

    >
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/dialog_camera"
        android:id="@+id/iv_camera"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        />

        <com.doctordesh.customViews.RobotoRegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_camera"
                android:text="@string/text_from_camera"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/iv_camera"
                app:layout_constraintTop_toTopOf="@+id/iv_camera"
                app:layout_constraintLeft_toRightOf="@+id/iv_camera"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_gallery"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"

            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_album"
                android:id="@+id/ic_album"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                />
        <com.doctordesh.customViews.RobotoRegularTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gallery"
                android:text="@string/text_from_gallery"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/ic_album"
            app:layout_constraintTop_toTopOf="@+id/ic_album"
            app:layout_constraintLeft_toRightOf="@+id/ic_album"
            app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
        />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>