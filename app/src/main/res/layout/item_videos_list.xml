<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:paddingTop="13dp"
>


    <ImageView android:layout_width="92dp" android:layout_height="60dp"
               android:id="@+id/iv_video_image"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginLeft="16dp"
               android:background="@color/grey"
               android:scaleType="fitXY"

    />

    <ImageView android:layout_width="32dp" android:layout_height="24dp"
               app:layout_constraintTop_toTopOf="@+id/iv_video_image"
               app:layout_constraintRight_toRightOf="@+id/iv_video_image"
               app:layout_constraintLeft_toLeftOf="@+id/iv_video_image"
               app:layout_constraintBottom_toBottomOf="@+id/iv_video_image"
               android:src="@drawable/ic_play_white"
               android:background="@drawable/play_btn_back"
               android:paddingLeft="8dp"
               android:paddingRight="8dp"
               android:paddingTop="4dp"
               android:paddingBottom="4dp"

    />


    <com.doctordesh.customViews.RobotoRegularTextView
            android:id="@+id/tv_video_title"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_video_image"
            app:layout_constraintBottom_toBottomOf="@+id/iv_video_image"
            app:layout_constraintLeft_toRightOf="@+id/iv_video_image"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:text="Video title"
    />


    <View android:layout_width="0dp" android:layout_height="1dp"

          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          android:background="@color/grey_1"
          android:layout_marginTop="13dp"
          app:layout_constraintTop_toBottomOf="@+id/iv_video_image"
    />
</androidx.constraintlayout.widget.ConstraintLayout>